package FileOperation;


import java.io.FileNotFoundException;

/**
 * Created by liboyang on 2017.4.9
 */
//继承TileType类，用于获取地图的数字数组
public class Map extends TileType {
    private int numberOfMap[][];
    private int[][] theTeam;
    public Map() throws FileNotFoundException {
    	super("file.txt");
    	numberOfMap = new int[10][10];
    	theTeam = new int[10][10];
    	for(int i = 0; i < 10; i++) {
    		for(int j = 0; j < 10; j++) {
    			numberOfMap[i][j] = this.getNumber()[i][j];
    		}
    	}
    	
    	for (int i = 0; i < 10; i++) {
            for (int j = 0; j < 10; j++) {
               if (numberOfMap[i][j] != 0 && j < 4) {
                   theTeam[i][j] = 1;
               }
               else if (numberOfMap[i][j] != 0 && j > 4) {
                   theTeam[i][j] = -1;
               }
               else {
                   theTeam[i][j] = 0;
               }
            }
        }
    }

    public int[][] getNumberOfMap() {
        return numberOfMap;
    }
    
    public int[][] getTheTeam(){
        return theTeam;
    }
}




