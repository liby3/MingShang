	private void setCharacterViewAttribute(int i, int j, Image figure) {
		if (figure != null) {
			characterImage.setImage(figure);
			characterImage.setFitWidth(40);
			characterImage.setFitHeight(60);
			characterImage.setLayoutX(60 * j + 100);
			characterImage.setLayoutY(50 + 60 * i);
		}
		else {
			characterImage.setFitWidth(40);
			characterImage.setFitHeight(60);
			characterImage.setLayoutX(60 * j + 100);
			characterImage.setLayoutY(50 + 60 * i);
		}
	}
}
